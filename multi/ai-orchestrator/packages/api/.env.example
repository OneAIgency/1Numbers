# AI Orchestrator API - Environment Configuration
# Copy this file to .env and update values as needed

# Application
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=console

# Server
HOST=127.0.0.1
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/orchestrator

# Redis (Cache)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# AI Providers - Claude (Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=4096

# AI Providers - Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=codellama:7b
OLLAMA_TIMEOUT=300

# Orchestration
DEFAULT_MODE=QUALITY
MAX_WORKERS=4
TASK_TIMEOUT=600000

# Security
SECRET_KEY=change-me-in-production-use-a-long-random-string
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Project (optional - defaults to current directory)
# PROJECT_PATH=/path/to/your/project
